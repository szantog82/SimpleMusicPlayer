<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/folder_listview_elements_img"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/folder_listview_elements_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5sp"
        android:layout_toEndOf="@id/folder_listview_elements_img"
        android:text="sgohfdgjbdfkg"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/folder_listview_elements_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:checked="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>